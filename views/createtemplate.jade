extends layout
 
block content
  h1 Create Template
  div.top
    form.form-horizontal(action='/methods/createTemplate' method="post", id="createContactForm")
      label Name
      input.span3(id="name" type="text" name="name")
      label Interval
      select(name='interval')
          option(value='hour') Hourly
          option(value='day') Daily
          option(value='week') Weekly
          option(value='month') Monthly
          option(value='year') Annually
      p
      table.table.table-striped
        label Select Contacts
        thead
          tr
            th Name
            th Email
            th Select
        tbody   
        each contact in contacts
          tr
            td #{contact.name}
            td #{contact.email}
            td 
              input(type='checkbox', checked=false, name= 'contactId-'+contact._id) 
      label Subjects
      input.span3(id="subjects" type="text" name="subjects")
      label Greetings
      input.span3(id="greetings" type="text" name="greetings")
      label Messages
      input.span3(id="messages" type="text" name="messages")
      label Signatures
      input.span3(id="signatures" type="text" name="signatures")
      p
      input.btn(type="submit" value="Create")
      a(href='/' class='btn btn-danger') Back