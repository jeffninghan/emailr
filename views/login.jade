extends layout
 
block content
  h1
    | Emailr 
    span.glyphicon.glyphicon-envelope
  br
  form(role='form' action='/login' method='post' id='loginForm')
    label(for='email') Email address
    input#email.form-control(placeholder='Enter email', name='email')
    br
    label(for='password') Password
    input#password.form-control(type='password', placeholder='Password',name='password')
    br
    button.btn.btn-default(type='submit') Log In
  br
  a(href='/signup') No account? Sign up! 